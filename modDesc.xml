<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="75">
    <author>OlSom</author>
    <version>1.0.0.0</version>
    <title>
        <en>Rotatable Camera</en>
    </title>
    <description>
        <en><![CDATA[
        This mod will allow you to enable or disable the rotation of any camera.

        The toggle keybind will enable or disable the rotation.
        The reset keybind will restore it to it's original state. If the camera was originally fixed, it will also restore it's direction.    
        ]]></en>
    </description>
    <iconFilename>icon.dds</iconFilename>
    <multiplayer supported="true"/>

    <extraSourceFiles>
        <sourceFile filename="RotatableCameraRegister.lua"/>
    </extraSourceFiles>

    <actions>
        <action name="ROTATABLE_CAMERA_TOGGLE" axisType="HALF"/>
        <action name="ROTATABLE_CAMERA_RESET" axisType="HALF"/>
    </actions>

    <l10n>
        <text name="input_ROTATABLE_CAMERA_TOGGLE">
            <en>Toggle camera rotation</en>
        </text>
        <text name="input_ROTATABLE_CAMERA_RESET">
            <en>Reset camera rotation</en>
        </text>
    </l10n>
</modDesc>
